<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.superstudentregion.mapper.ArticleMapper">
    <sql id="allCol">
        article_id,
        user_id,
        article_title,
        submit_time,
        article_html_path,
        article_md_path,
        like_count,
        unlike_count,
        release_time,
        collection_count,
        type_id,
        read_permission,
        state_flag,
        del_flag
    </sql>

    <select id="selectAllArticleByUser" parameterType="Integer" resultType="ArticleInfo">
        select
        <include refid="allCol" />
        from
        article_info
        <where>
            del_flag = 0
            <if test="userId != null">
                and user_id = #{userId}
            </if>
        </where>
        order by
        release_time
        desc
    </select>

    <select id="selectArticleById" parameterType="Integer" resultType="ArticleInfo">
        select
        <include refid="allCol" />
        from
        article_info
        where
        article_id = #{articleId}
        and
        del_flag = 0
    </select>

    <delete id="deleteArticleById" parameterType="Integer">
        delete
        from
            article_info
        where
            article_id = #{articleId}
    </delete>

    <update id="updateArticle" parameterType="ArticleInfo">
        update
        article_info
        <set>
            <if test="articleTitle!=null and articleTitle!=''">
                article_title = #{articleTitle},
            </if>
            <if test="typeId!=null">
                type_id = #{typeId},
            </if>
            <if test="readPermission!=null">
                read_permission = #{readPermission},
            </if>
            <if test="stateFlag!=null">
                state_flag = #{stateFlag},
            </if>
            <if test="delFlag!=null">
                del_flag = #{delFlag},
            </if>
            <if test="delFlag!=null">
                submit_time = #{submitTime}
            </if>

        </set>
        <where>
            <if test="articleId!=null">
                article_id = #{articleId}
            </if>
            <if test="userId!=null">
                and user_id = #{userId}
            </if>
        </where>
    </update>

    <insert id="insertArticle" parameterType="ArticleInfo">
        insert
        article_info
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="userId!=null">
                user_id,
            </if>
            <if test="articleTitle!=null and articleTitle!=''">
                article_title,
            </if>
            <if test="articleHtmlPath!=null and articleHtmlPath!=''">
                article_html_path,
            </if>
            <if test="articleMdPath!=null and articleMdPath!=''">
                article_md_path,
            </if>
            <if test="typeId != null">
                type_id,
            </if>
            submit_time,
            release_time,
            read_permission,
            state_flag,
            del_flag
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test="userId!=null">
                #{userId},
            </if>
            <if test="articleTitle!=null and articleTitle!=''">
                 #{articleTitle},
            </if>
            <if test="articleHtmlPath!=null and articleHtmlPath!=''">
                #{articleHtmlPath},
            </if>
            <if test="articleMdPath!=null and articleMdPath!=''">
                 #{articleMdPath},
            </if>
            <if test="typeId != null">
                 #{typeId},
            </if>
            now(),
            now(),
            0,
            0,
            0
        </trim>
    </insert>
</mapper>