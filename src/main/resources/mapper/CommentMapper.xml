<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.superstudentregion.mapper.CommentMapper">
    <sql id="allCol">
        comment_id,
        submitter_id,
--         author_id,
        content,
        submit_time,
        like_count,
        del_flag
    </sql>
    <insert id="insertComment" parameterType="ArticleComment" useGeneratedKeys ="true" keyProperty="commentId">
        insert into
            article_comment
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="submitterId!=null">
                submitter_id,
            </if>
            <if test="articleId!=null">
                article_id,
            </if>
            <if test="content!=null and content!=''">
                content,
            </if>
                submit_time,
                del_flag
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test="submitterId!=null">
                #{submitterId},
            </if>
            <if test="articleId!= null">
                #{articleId},
            </if>
            <if test="content!=null and content!= ''">
                #{content},
            </if>
                now(),
                0
        </trim>
    </insert>

    <select id="allCommentByArticle" parameterType="Integer" resultType="ArticleComment">
        select
            <include refid="allCol" />
        from
            article_comment
        where
            article_id = #{articleId}

    </select>

    <update id="delComment" parameterType="Integer">
        update
            article_comment
        set
            del_flag = 1
        where
            comment_id = #{commentId}
    </update>

</mapper>